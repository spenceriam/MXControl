{
  "name": "mx-control",
  "version": "0.1.0",
  "private": true,
  "description": "Linux-native configuration tool for Logitech MX Master mice",
  "main": "dist/main/main/main.js",
  "scripts": {
    "dev": "npm run build:electron && concurrently -k \"vite\" \"wait-on tcp:5173 && electron .\"",
    "build": "rimraf dist && tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json && vite build",
    "build:electron": "tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "test": "echo 'Tests are deferred per tasks.md' && exit 0",
    "package:linux": "electron-builder --linux --config electron-builder.yml"
  },
  "dependencies": {
    "@abandonware/noble": "^1.9.2-26",
    "dbus-next": "^0.10.2",
    "electron-store": "^8.2.0",
    "node-hid": "^2.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "uuid": "^9.0.1",
    "zod": "^3.23.8",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@types/node-hid": "^1.3.3",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "electron": "^30.0.9",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.35.0",
    "postcss": "^8.4.41",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.6.2",
    "vite": "^5.4.3",
    "wait-on": "^7.2.0"
  }
}
